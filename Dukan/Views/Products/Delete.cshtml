@model Dukan.Models.Master.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Row start -->
<div class="row">
    <div class="col-xxl-12">
        <div class="card shadow mb-4">
            <!-- Card Header -->
            <div class="card-header">
                <h5 class="card-title">Delete Product</h5>
            </div>

            <!-- Card Body -->
            <div class="card-body">
                <h6>Are you sure you want to delete this product?</h6>
                <div class="row">
                    <div class="col-lg-6 col-sm-12">
                        <dl class="row">
                            <dt class="col-sm-4">Name:</dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.ProName)
                            </dd>
                            <dt class="col-sm-4">Brand:</dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Brand)
                            </dd>
                        </dl>
                    </div>
                    <div class="col-lg-6 col-sm-12">
                        <dl class="row">
                            <dt class="col-sm-4">MRP:</dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.Mrp)
                            </dd>
                            <dt class="col-sm-4">Quantity:</dt>
                            <dd class="col-sm-8">
                                @Html.DisplayFor(model => model.NoQuantity)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Card Footer -->
            <div class="card-footer">
                <form asp-action="Delete" class="d-flex gap-2 justify-content-end">
                    <input type="hidden" asp-for="ProId" />
                    <button type="submit" class="btn btn-danger">
                        Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Row end -->
