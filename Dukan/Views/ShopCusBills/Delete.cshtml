@model Dukan.Models.Bill.ShopCusBill

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Row start -->
<div class="row">
    <div class="col-xxl-12">
        <div class="card shadow mb-4">
            <!-- Card Header -->
            <div class="card-header">
                <h5 class="card-title">Delete Shop Customer Bill</h5>
            </div>

            <!-- Card Body -->
            <div class="card-body">
                <h3>Are you sure you want to delete this?</h3>

                <div>
                    <h4>Shop Customer Bill Details</h4>
                    <hr />
                    <dl class="row">
                        <!-- Shop Details -->
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ShopDetails)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ShopDetails.ShopAddress)
                        </dd>

                        <!-- Shop Customer -->
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ShopCustomers)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ShopCustomers.ScusAdd)
                        </dd>

                        <!-- Product Details -->
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Products)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Products.Brand)
                        </dd>

                        <!-- Quantity -->
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Quantity)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Quantity)
                        </dd>

                        <!-- Amount -->
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Amount)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Amount)
                        </dd>

                        <!-- Percentage -->
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Percentage)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Percentage)
                        </dd>
                    </dl>
                </div>

                <!-- Delete Form -->
                <form asp-action="Delete">
                    <input type="hidden" asp-for="SopCusBId" />
                    <div class="d-flex gap-2 justify-content-end">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            Back to List
                        </a>
                    </div>
                </form>
            </div>

            <!-- Card Footer -->
            <div class="card-footer">
                <div class="d-flex gap-2 justify-content-end">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Row end -->
